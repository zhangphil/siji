<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageButton
            android:layout_height="wrap_content"
            android:id="@id/backButton"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/poilistpress"
            android:background="@drawable/bg_btn_back"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@id/back_img_button"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@id/title"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical|center"
            android:id="@id/switch_city_button"
            android:paddingBottom="@dimen/layout_margin_5"
            android:paddingTop="@dimen/layout_margin_3"
            android:visibility="gone"
            android:paddingLeft="6dp"
            android:paddingRight="20dp"
            android:textColor="@color/poilistpress"
            android:textSize="14sp"
            android:text="成都1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical|center"
            android:id="@id/cancelButton"
            android:paddingBottom="@dimen/layout_margin_5"
            android:paddingTop="@dimen/layout_margin_3"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/poilistpress"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="取消"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/no_network_tip"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@color/listpress"
        android:layout_height="40dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:text="@string/no_network_tip"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_normal"
            android:text="查看详情"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/chinamobile_network_tip"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:background="@color/listpress"
        android:layout_height="40dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:text="@string/chinamobile_network_tip"
            android:textColor="@color/text_color2"
            android:textSize="12sp"/>
    </RelativeLayout>
    <!--<include android:id="@id/adv_header" layout="@layout/adv_hearder"/>-->
</LinearLayout>