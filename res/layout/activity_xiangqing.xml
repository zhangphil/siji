<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huochebang_light_gray" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_xiangqing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toobar_height"
        android:layout_alignParentTop="true"
        android:background="@color/huochebang_light_orange"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="返回"
        app:navigationIcon="@drawable/fanhui" >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_xiangqing_toolbar"
        android:layout_margin="10dip"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="订单编号：20150910001"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/huowuZhuangTaiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="待接货" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/dash_line_divider"
            android:layerType="software"
            android:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="装货时间：2015-09-10 08:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="桑泰大道（丽山路与学苑大道交汇处）" />

        <TextView
            android:id="@+id/zhuangHuoPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="张三：13801380138" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="万海大厦（南山区南海大道1031）" />

        <TextView
            android:id="@+id/shouHuoPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="李四：13013013013" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="公里数：约14.4公里" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="所属车型：小型面包车" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="货物体积：办公用品" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="额外服务：需要跟车、需要搬运" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="运费：0元" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="支付方式：线下到付" />
    </LinearLayout>

    <Button
        android:id="@+id/jingJiaButton"
        android:layout_margin="10dip"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/huochebang_light_orange"
        android:text="竞价"
        android:textColor="@android:color/white" />

</RelativeLayout>