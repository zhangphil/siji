<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:id="@id/tvTitle"
        android:background="#ff9933"
        android:text="系统提示"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="fill_parent"
        android:id="@id/tvTip1"
        android:layout_marginTop="@dimen/layout_margin_10"
        android:layout_marginLeft="@dimen/layout_margin_10"
        android:layout_marginRight="@dimen/layout_margin_10"
        android:text="您的账号在其他设备登录，您被迫下线。\n如果这不是您本人的操作，那么您的密码很可能已经泄露"
        android:paddingLeft="5dp"
        android:layout_below="@id/tvTitle"
        android:textColor="@color/black1"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@id/llCenter"
        android:layout_marginLeft="@dimen/layout_margin_10"
        android:layout_marginRight="@dimen/layout_margin_10"
        android:layout_below="@id/tvTip1"
        android:layout_marginTop="@dimen/layout_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="建议您重新登录后"
            android:paddingLeft="5dp"
            android:textColor="@color/black1"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/modifyPassword"
            android:textColor="@color/orange"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:id="@id/tvModifyPassword"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@id/llBottom"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_10"
        android:layout_below="@id/llCenter">


        <Button
            android:id="@id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_orange"
            android:text="取消" />

        <Button
            android:id="@id/btnReLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/poilistpress"
            android:background="@drawable/bg_btn_orange"
            android:text="重新登录" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_below="@id/llBottom"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:text="取消" />


</RelativeLayout>